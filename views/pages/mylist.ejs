<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head'); %>
  <body class="body-mylist">
    <nav class="nav-mylist">
      <a href="/">Choose K-drama</a>
    </nav>
    <a class="user-profile" href="/profile/<%= users._id %>/<%= users.slug %>">
      <img src="/<%= users.img %>" alt="<%= users.name %>" /><%= users.name %>
    </a>

    <main class="main-mylist">
      <h1 class="visually-hidden">List of kdramas</h1>

      <% tmdb.forEach(kdrama => { %>
        <article>
          <a href="/kdrama/<%= kdrama._id %>/<%= kdrama.slug %>">
            <img class="poster-img" src="/img/404-cover.jpg" alt="<%= kdrama.name %>" />
            <form action="/mylist/<%= users._id %>/<%= users.slug %>" method="post">
              <button>
                  <div class="heart-add"></div>
              </button>
            </form>
          </a>
          <h3><%= kdrama.name %></h3>
        </article>
      <% }) %>
    </main>
    <script src="/js/visibility.js"></script>
    <script
      src="https://kit.fontawesome.com/c24c386355.js"
      crossorigin="anonymous"
    ></script>
    <script src="/js/mylist.js"></script>
  </body>
</html>
